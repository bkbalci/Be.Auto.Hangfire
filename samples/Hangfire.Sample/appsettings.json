{
  "Logging": {
    "LogLevel": {
      "Default": "Warning", // Tüm loglar için varsayılan seviye, uyarılar ve daha üst seviye olaylar kaydedilir.
      "System": "Warning", // Sistem bileşenleri için log seviyesi, uyarılar ve daha üst seviye olaylar kaydedilir.
      "Microsoft": "Warning", // Microsoft bileşenleri için log seviyesi, uyarılar ve daha üst seviye olaylar kaydedilir.
      "Hangfire": "Information" // Hangfire için log seviyesi, uyarılar ve daha üst seviye olaylar kaydedilir.
    }
  },
  "Hangfire": {
    "ServerOptions": {
      "ServerName": "JOBS", // Sunucu adı, iş sunucusu için tanımlayıcı isim.
      "IsLightweightServer": false, // Hafif sunucu modunu etkinleştirir. Sadece gerekli işlemler çalışır.
      "WorkerCount": 20, // Aynı anda çalışan işçi sayısı.
      "Queues": [ "default", "critical", "low" ], // Dinlenecek iş kuyrukları listesi.
      "StopTimeout": "00:00:30", // İş sunucusunun durması için gereken zaman aşımı süresi.
      "ShutdownTimeout": "00:01:00", // İş sunucusunun kapanması için gereken zaman aşımı süresi.
      "SchedulePollingInterval": "00:01:00", // Gecikmeli işlerin zaman aşımı süresi (işlenme süresi).
      "HeartbeatInterval": "00:00:30", // Sunucunun kalp atışı kontrol süresi.
      "ServerCheckInterval": "00:01:00", // Sunucu durumunun kontrol edileceği aralık.
      "ServerTimeout": "00:05:00", // Sunucu zaman aşımı süresi.
      "CancellationCheckInterval": "00:00:15", // İptal kontrol süresi. İptal edilmesi gereken işlerin kontrol aralığı.
      "MaxDegreeOfParallelismForSchedulers": 4 // Maksimum paralelizm derecesi, eş zamanlı çalışan iş planlayıcıları için.
    },
    "SqlServerStorageOptions": {
      "ConnectionString": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=HangfireTest;Persist Security Info=True;User ID=hangfire;Password=12345;MultipleActiveResultSets=True;TrustServerCertificate=True;", // Hangfire'ın veritabanı bağlantı dizesi.
      "QueuePollInterval": "00:00:10", // İş kuyruğunun hangi sıklıkta kontrol edileceğini belirtir.
      "SlidingInvisibilityTimeout": "00:00:10", // İşlerin görünmez kaldığı maksimum süre.
      "JobExpirationCheckInterval": "00:00:10", // Süresi dolmuş işlerin kontrol edilme aralığı.
      "CountersAggregateInterval": "00:00:10", // Sayaçların toplanma aralığı.
      "DashboardJobListLimit": 100, // Hangfire panosunda gösterilecek maksimum iş sayısı.
      "TransactionTimeout": "00:00:10", // Veritabanı işlemlerinin zaman aşımı süresi.
      "CommandTimeout": "00:00:10", // Veritabanı komutlarının zaman aşımı süresi.
      "CommandBatchMaxTimeout": "00:00:10", // Komut gruplarının maksimum zaman aşımı süresi.
      "InactiveStateExpirationTimeout": "00:00:10", // İnaktif durumda olan işlerin süresi dolma zaman aşımı.
      "SchemaName": "Point", // Hangfire veritabanı için kullanılacak şema adı.
      "DisableGlobalLocks": true, // Global kilitlerin devre dışı bırakılıp bırakılmayacağını belirtir.
      "UseRecommendedIsolationLevel": true, // Önerilen yalıtım seviyesinin kullanılıp kullanılmayacağını belirtir.
      "EnableHeavyMigrations": true, // Ağır veritabanı göçlerinin etkin olup olmayacağını belirtir.
      "UseFineGrainedLocks": true, // İnce ayarlı kilitlerin kullanılıp kullanılmayacağını belirtir.
      "UseIgnoreDupKeyOption": true, // Tekrarlayan anahtarların yoksayılmasını sağlar.
      "DeleteExpiredBatchSize": 1000, // Süresi dolmuş işlerin toplu silme boyutu.
      "UseTransactionalAcknowledge": true, // İşlerin transactional olarak tanındığını belirtir.
      "TryAutoDetectSchemaDependentOptions": true, // Şemaya bağlı seçeneklerin otomatik algılanmaya çalışılacağını belirtir.
      "PrepareSchemaIfNecessary": true // Gerekirse şemanın hazırlanacağını belirtir.
    },
    "DashboardOptions": {
      "DashboardTitle": "Job Admin", // Hangfire panosunun başlık adı.
      "DefaultRecordsPerPage": 10, // Her sayfada gösterilecek varsayılan kayıt sayısı.
      "DisplayStorageConnectionString": true // Veritabanı bağlantı dizesinin gösterilip gösterilmeyeceğini belirtir.
    },
    "JobAutomaticRetryOptions": {
      "Attempts": 3, // İşin başarısız olması durumunda tekrar denenecek maksimum deneme sayısı. Burada 3 olarak ayarlanmış.
      "OnAttemptsExceeded": "Fail", //Fail veya Delete değerini alabilir. Belirtilen deneme sayısının aşılması durumunda işin nasıl ele alınacağını belirtir. "Delete", işi deneme sayısı aşıldığında siler.
      "LogEvents": true // Yeniden deneme girişimlerinin günlüğe kaydedilip kaydedilmeyeceğini belirtir. "true" olarak ayarlandığında, tüm yeniden deneme girişimleri günlüğe kaydedilir.
    },
    "JobManagerOptions": {
      "DisableConcurrentlyJobExecution": true, // Eğer true olarak ayarlanmışsa, aynı anda aynı parametrelere sahip birden fazla işin yürütülmesi engellenir.
      "WebRequestJobTimeout": "00:00:10" // WebRequest işlerinin zaman aşımı süresi. 
    }
  }
}
